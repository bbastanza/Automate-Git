
#!/bin/bash

# This is a simple script to automate pushing new commits to GitHub

ls <Enter Git Directory Here>
read -p "Which git directory: " folder
cd <Enter Git Directory Here>$folder
git branch
read -p "Which branch: " branch
cd <Enter Git Directory Here>$folder
git add .
git status
read -p "Enter commit name: " commitname
git commit -m "commit $commitname"  
git push origin -u $branch
git status

exit
