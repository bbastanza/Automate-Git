
#!/bin/bash

# replace all *directory-path* with your absolute path


ls *directory-path*

read -p "Which git directory: " folder

cd *directory-path*$folder

git branch
read -p "Which branch: " branch

cd *directory-path*$folder

git add .
git status
read -p "Enter commit name: " commitname
git commit -m "commit $commitname"  
git push origin -u $branch
git status

exit
